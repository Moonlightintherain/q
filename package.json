{
  "name": "telegram-miniapp",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "generate-manifest": "node scripts/generate-manifest.js",
    "analyze-bundle": "vite build --mode analyze && npx vite-bundle-analyzer server/public",
    "prebuild": "node scripts/generate-manifest.js",
    "predev": "node scripts/generate-manifest.js",
    "dev": "vite",
    "build": "npm run prebuild && vite build && node scripts/copy-assets.js",
    "build:analyze": "npm run build && npm run analyze-bundle",
    "preview": "vite preview",
    "server": "node server/server.js",
    "server:prod": "NODE_ENV=production node server/server.js"
  },
  "dependencies": {
    "@tonconnect/sdk": "^3.3.1",
    "@tonconnect/ui-react": "^2.3.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.13",
    "terser": "^5.44.0",
    "vite": "^5.4.20"
  }
}
